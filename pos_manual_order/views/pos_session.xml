<odoo>

    <record model="ir.ui.view" id="pos_session_add_order_form_view">
        <field name="name">pos.session.add.order.form (in pos_manual_order)</field>
        <field name="model">pos.session.add.order</field>
        <field name="arch" type="xml">
            <form string="Pos Session Add Order">
                <!-- TODO -->
                <group>
                    <field name="session_id" invisible="1"/>
                    <field name="product_id"/>
                    <field name="price"/>
                    <field name="qty"/>
                    <field name="amount_total"/>
                </group>
                <group>
                    <group>
                        <field name="journal_id" domain="[('id', 'in', journal_ids)]"/>
                        <field name="journal_ids" invisible="1"/>
                    </group>
                    <group>
                        <field name="partner_id"/>
                        <field name="fiscal_position_id"/>
                    </group>
                </group>
                <footer>
                    <button name="run"
                            string="Create Order"
                            class="btn-primary"
                            type="object"/>
                    <button string="Cancel"
                            class="btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="pos_session_add_order_act_window">
        <field name="name">Pos Session Add Order</field> <!-- TODO -->
        <field name="res_model">pos.session.add.order</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>


</odoo>
