<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchaseorder_document_third_party"
              inherit_id="purchase.report_purchaseorder_document"
              primary="True">
        <xpath expr="//t[@t-call = 'web.external_layout']" position="attributes">
            <attribute name="t-call">purchase_third_party.external_layout</attribute>
        </xpath>
        <xpath expr="//div[@t-field = 'o.partner_id']" position="attributes">
            <attribute name="t-field">o.third_party_partner_id</attribute>
        </xpath>
        <xpath expr="//p[@t-if = 'o.partner_id.vat']"
               position="attributes">
            <attribute name="t-if">o.third_party_partner_id.vat</attribute>
        </xpath>
        <xpath expr="//span[@t-field = 'o.partner_id.vat']"
               position="attributes">
            <attribute name="t-field">o.third_party_partner_id.vat</attribute>
        </xpath>
    </template>

    <template id="report_purchaseorder_third_party">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="partner" t-value="o.partner_id"/>
                <t t-call="purchase_third_party.report_purchaseorder_document_third_party"
                   t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template>

    <report
            string="Third Party Purchase Order"
            id="action_report_purchase_order"
            model="purchase.order"
            report_type="qweb-pdf"
            name="purchase_third_party.report_purchaseorder_third_party"
            file="purchase_third_party.report_purchaseorder_third_party"
            print_report_name="
                (object.state in ('draft', 'sent') and 'Request for Quotation - %s' % (object.name) or
                'Purchase Order - %s' % (object.name))"
    />

</odoo>
